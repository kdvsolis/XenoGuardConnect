<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XenoGuardConnectMain.SubViews.SettingsPage"
             xmlns:local="clr-namespace:XenoGuardConnectMain"
             xmlns:dxe="http://schemas.devexpress.com/xamarin/2014/forms/editors"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <StackLayout>
        <StackLayout BackgroundColor="#2088ff" Margin="10, 10, 10, 0" VerticalOptions="StartAndExpand" >
            <Label Text="Name: XYZ" HorizontalTextAlignment="Start" TextColor="White" FontSize="16"  Margin="10, 10"/>
            <StackLayout Orientation="Horizontal" Margin="10, 10, 10, 0" >
                <Label Text="Beep on Message" HorizontalTextAlignment="Start" TextColor="White" FontSize="16" Margin="0, 10"/>
                <CheckBox HorizontalOptions="End" />
            </StackLayout>
            <dxe:SimpleButton Text="Clear all message" HorizontalContentAlignment="Start" />
        </StackLayout>
        <StackLayout VerticalOptions="End" Margin="10, 0, 10, 15">
            <!-- bottom controls -->
            <dxe:SimpleButton Text="Back" Clicked="ButtonNavigateBack"/>
        </StackLayout>
    </StackLayout>
</ContentPage>